<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="112dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:00:00"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_hourly"
        android:textColor="@color/whiteColor"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:background="@drawable/circle_shape"
        android:id="@+id/img_hourly"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/w_02d"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_hourly"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 c"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_Temp"
        android:layout_below="@id/img_hourly"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019/02/03"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_Temp"
        android:id="@+id/txt_date"
        android:textColor="@color/whiteColor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />


</RelativeLayout>
</android.support.v7.widget.CardView>
